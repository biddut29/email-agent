FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies with npm cache and use npm ci for faster, reliable installs
RUN --mount=type=cache,target=/root/.npm \
    npm ci

# Copy source code
COPY . .

# Build Next.js for production
RUN npm run build

# Expose port
EXPOSE 3000

# Run in production mode (more stable behind reverse proxy)
# The start script in package.json already binds to 0.0.0.0
CMD ["npm", "start"]

